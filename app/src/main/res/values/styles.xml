<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextoPrincipal">
        <item name="android:textSize">40sp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="ButtonForm" parent="Theme.Calculadora">
        <item name="android:background">@drawable/roundstyle</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:height">75dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:foreground">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="Operations" parent="ButtonForm">
        <item name="android:textColor">@color/dark_turquoise</item>
    </style>

    <style name="Clear" parent="ButtonForm">
        <item name="android:textColor">@color/coral</item>
    </style>

    <style name="EqualsButton" parent="ButtonForm">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/turquoise</item>
    </style>
</resources>