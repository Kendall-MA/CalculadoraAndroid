<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculadora" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/almost_white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/almost_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/dark_turquoise</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Status bar Icon color-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Text Color -->
        <item name="android:textColorTertiary">@color/grey</item>
        <item name="android:textAppearanceButton">@color/grey</item>
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>